<script type="text/javascript">
$.deleteOldATCookie = function() {
begin = document.cookie.indexOf("at="); if (begin != -1) { begin += 3; end = document.cookie.indexOf(";", begin);
if (end == -1) {
end = document.cookie.length;
}
atCookieVal = unescape(document.cookie.substring(begin, end));
if ( atCookieVal.match(/u=[0-9]+-[PCMS|pcms]/) != null){
document.cookie = "at=;expires=-1";
document.cookie = "AUTH_KEEP_LOGGED_IN=;expires=-1";
}
}
};
$(document).ready(function(){$.deleteOldATCookie();});
</script>
</div>
