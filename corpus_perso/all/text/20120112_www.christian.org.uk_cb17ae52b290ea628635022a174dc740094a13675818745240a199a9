					$("a[href$='psd']").addClass("psd");
					$("a[href*='youtube.com']").addClass("vid");
					$("a[href*='youtu.be']").addClass("vid");
					$("a[href$='psd']").addClass("psd");
					$("a[href^='http:']").not("[href*='christian.org.uk']").not("[href^='#']").not("[href^='javascript:void(0)']").addClass("external").attr("target","_blank");

					/* NEWS ARTICLE FOOTER VIDEO */
					$("#watchvideo").click(function () {
						$("#newsvideo").slideDown('slow');
						$("#hidevideo").show();
						$('html,body').animate({scrollTop:$("#watchvideo").offset().top},'slow');
						return false;
					});
					$("#hidevideo").click(function () {
						$("#newsvideo").slideUp('slow');
						$("#hidevideo").fadeOut('slow');
						timeout = setTimeout(function () {$("#videoframe").attr('src','');}, 500);
						timeout = setTimeout(function () {$("#videoframe").attr('src','https://www.youtube.com/embed/izPWGMX3imY?showinfo=0&rel=0');}, 600);
						return false;
					});

					$(".faq_answer").css("display","none");
					$(".down-arrow").show();

					$(".faq_question").click(function () {
						if ($(this).next(".faq_answer").is(":hidden") === true) {
							$(this).find(".down-arrow").hide();	
							$(this).find(".up-arrow").show();
							$(this).next(".faq_answer").slideDown('fast');
						} else {
							$(this).find(".up-arrow").hide();	
							$(this).find(".down-arrow").show();	
							$(this).next(".faq_answer").slideUp('fast');
						}
					});
				});
			</script>

