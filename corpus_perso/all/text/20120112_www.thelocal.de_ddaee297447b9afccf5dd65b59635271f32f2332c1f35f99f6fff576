<script>
  $(document).ready(function(){
     $.cookieBar();
	 setTimeout(function(){
		$('#cookie-bar').slideDown();
	}, 5000);
	 setTimeout(function(){
		$('#cookie-bar').slideUp();
	}, 25000);
	
	// Check the initial Poistion of the Sticky Header
	var stickyHeaderTop = $('#header').offset().top;

	$(window).scroll(function(){
			if( $(window).scrollTop() > stickyHeaderTop ) {
				if($.cookie('stick_toolbar') == 1){
					$('#header').addClass('stick_header');
					$('#menubutton').addClass('stick_menubutton');
					$('#menucontain').addClass('stick_menucontain');
					$('#col1col2wrapper').addClass('stick_col1col2wrapper');
				}
			} else {
				$('#header').removeClass('stick_header');
				$('#menubutton').removeClass('stick_menubutton');
				$('#menucontain').removeClass('stick_menucontain');
				$('#col1col2wrapper').removeClass('stick_col1col2wrapper');
			}
	});
  });
</script>


