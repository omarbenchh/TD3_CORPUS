<script type="text/javascript">
    String.prototype.zytrim = function () {
        return this.replace(/\s/g, '');
    };

    var search = {
        urlA: 'http://data.house.hexun.com/DataProvider/SinaApiGetAllCity.ashx',
        urlB: 'http://data.house.hexun.com/DataProvider/SinaApiAgent.ashx?',
        init: function () {
            var box = document.getElementById('searchBox'),
                    firstDiv = box.childNodes[0].nodeType == 1 ? box.childNodes[0] : box.childNodes[0].nextSibling,
                    firstSpan = firstDiv.getElementsByTagName('span')[0],
                    cityPanel = firstDiv.getElementsByTagName('div')[0],
                    alinks = cityPanel.getElementsByTagName('ul')[0].getElementsByTagName('a'),
                    len = alinks.length,
                    i,
                    cityName = document.getElementById('cityName'),
                    sure1 = document.getElementById('sure1'),
                    area = document.getElementById('area'),
                    price = document.getElementById('price'),
                    wuye = document.getElementById('wuye');
            // 付出城市选择框
            firstDiv.onmouseover = function (e) {
                e = window.event || e;
                related = e.relatedTarget || e.fromElement;
                while (related && related != this) {
                    related = related.parentNode;
                }
                if (related == this) {
                    return;
                }
                cityPanel.style.display = 'block';
            };
            firstDiv.onmouseout = function (e) {
                e = window.event || e;
                related = e.relatedTarget || e.toElement;
                while (related && related != this) {
                    related = related.parentNode;
                }
                if (related == this) {
                    return;
                }
                cityPanel.style.display = 'none';
            };
            // 初始城市数组
            this.request(this.urlA, function (data) {
                if (data != undefined && data.length > 1) {
                    search.citys = data;
                }
                var province = getrequest("province");
                if (province == null || province == '') {
                    // 初始化北京
                    province = 'bj';

                } else {
                    firstSpan.innerHTML = getCitykey(province);
                }
                document.getElementById('provincename').value = firstSpan.innerHTML.zytrim();
                document.getElementById('province').value = province;
                doIt(search.urlB + 'city_en=' + province);
            });
            // 插入数据
            function doHtml(data) {
                var sel, db = data, x = 1;
                if (data.district) {
                    db = db.district;
                    sel = area;
                    sel.options.length = 0;
                    sel.options[0] = new Option('所在区域', '', true, false);
                }
                else if (data.pricerange) {
                    db = db.pricerange;
                    sel = price;
                    sel.options.length = 0;
                    sel.options[0] = new Option('目标价位', '', true, false);
                }
                else if (data.hometype) {
                    db = db.hometype;
                    sel = wuye;
                    sel.options.length = 0;
                    sel.options[0] = new Option('物业类型', '', true, false);
                }
                for (i in db) {
                    sel.options[x] = new Option(db[i].name, db[i].name);
                    x++;
                }
            }
            for (i = 0; i < len; i++) {
                alinks[i].onclick = function (e) {
                    var e = e || window.event;
                    var value = this.innerHTML,
                            url = search.urlB + 'city_en=' + this.id;
                    doIt(url);
                    document.getElementById('provincename').value = this.innerHTML;
                    document.getElementById('province').value = this.id;
                    firstSpan.innerHTML = value;
                    return false;
                }
            }
            function doIt(url) {
                search.request(url + '&tag=district', function (data) {
                    doHtml(data);
                });
                search.request(url + '&tag=pricerange', function (data) {
                    doHtml(data);
                });
                search.request(url + '&tag=hometype', function (data) {
                    doHtml(data);
                });
            }
            cityName.onfocus = function (e) {
                this.style.color = '#000';
                if (this.value == '城市名称') {
                    this.value = '';
                }

            };
            cityName.onblur = function (e) {
                this.style.color = '#ccc';
                if (this.value == '') {
                    this.value = '城市名称'
                }
                if (this.value != '' && this.value != '城市名称') return;
            };
            sure1.onclick = function (e) {
                var value = isCity(cityName.value),
                        url;
                if (value) {
                    document.getElementById('provincename').value = value.text;
                    document.getElementById('province').value = value.id;
                    firstSpan.innerHTML = value.text;
                    url = search.urlB + 'city_en=' + value.id;
                    doIt(url);
                }
                else {
                    alert('暂时没有该城市数据')
                }


            };
            function isCity(value) {
                var citys = search.citys;
                value = value.zytrim();
                for (var k = 0, len = citys.length; k < len; k++) {
                    if (value == citys[k].text) return citys[k];
                }
                return false;
            }
            function getCitykey(value) {
                var citys = search.citys;
                value = value.zytrim();
                for (var k = 0, len = citys.length; k < len; k++) {
                    if (value == citys[k].id) return citys[k].text;
                }
                return false;
            }
            function getrequest(strParame) {
                var args = new Object();
                var query = location.search.substring(1);

                var pairs = query.split("&"); // Break at ampersand
                for (var i = 0; i < pairs.length; i++) {
                    var pos = pairs[i].indexOf('=');
                    if (pos == -1) continue;
                    var argname = pairs[i].substring(0, pos);
                    var value = pairs[i].substring(pos + 1);
                    //value = decodeURIComponent(value);
                    args[argname] = value;
                }
                return args[strParame];
            }
        },
