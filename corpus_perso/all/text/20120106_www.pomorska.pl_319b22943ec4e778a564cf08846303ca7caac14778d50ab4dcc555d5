      function przelaczOknoSzczegolow() {
          if(jQuery("#pasek-regionalny-plus #pasek-plus-szczegoly").is(":visible")) {
              jQuery("#pasek-regionalny-plus > .zaslona").hide();
              jQuery("#pasek-regionalny-plus #pasek-plus-szczegoly").hide();
          } else {
              jQuery("#pasek-regionalny-plus > .zaslona").show();
              jQuery("#pasek-regionalny-plus #pasek-plus-szczegoly").show();
          }
          return false;
      }

      jQuery('document').ready(function(){
          if(!jQuery(".winieta").length || !jQuery(".winieta").is(":visible")) {
              jQuery("#pasek-plus-logo, #pasek-plus-menu").removeClass("ukryte");
          }

          jQuery("#menu-glowne > li:not('#wyszukaj-menu')").each(function(){
              var element = new Object();
              element.link = jQuery(this).find(" > a").attr("href");
              element.nazwa = jQuery(this).find(" > a").html();

              if (jQuery(this).find(" > a").attr("target")) {
                  var e = '<li><a target="_blank" href="' + element.link + '">' + element.nazwa + '</a></li>';
              } else {
                  var e = '<li><a href="' + element.link + '">' + element.nazwa + '</a></li>';
              }
              jQuery("#pasek-plus-tresc .listaMenu").append(e);
          });
      });

      jQuery(window).on("scroll", function(){
          if(jQuery(".winieta").length) {
              if (jQuery(".winieta").offset().top < jQuery(document).scrollTop() || !jQuery(".winieta").is(":visible")) {
                  jQuery("#pasek-plus-menu, #pasek-plus-logo").removeClass("ukryte");
              } else {
                  jQuery("#pasek-plus-menu, #pasek-plus-logo").addClass("ukryte");
              }
          }
      });

      jQuery("#pasek-plus-profil").click(function(){
          var zalogowany = (jQuery("#pasek-regionalny-plus").hasClass("zalogowany")) ? true : false,
              zDostepem = (jQuery("#pasek-regionalny-plus").hasClass("zDostepem")) ? true : false;

          if(zalogowany) {
              przelaczOknoSzczegolow();
          } else {
              if(jQuery("body").hasClass("widokMobilny")) {
                  PianoMedia.mobile.toggleLogin();
              } else {
                  PianoMedia.box.login.toggle();
              }
          }

          return false;
      });

      jQuery("#pasek-plus-prenumeruj").click(function(){
          var zalogowany = (jQuery("#pasek-regionalny-plus").hasClass("zalogowany")) ? true : false,
              zDostepem = (jQuery("#pasek-regionalny-plus").hasClass("zDostepem")) ? true : false;

          if(zalogowany) {
              PianoMedia.box.payment.toggle();
          } else {
              PianoMedia.box.info.open();
          }
          
          if (jQuery(document.body).hasClass("widokMobilny")) {
              Piano.otworzOkno();
          };

          return false;
      });

      jQuery("#pasek-plus-menu").click(function(){
          jQuery("#pasek-regionalny-plus").addClass("aktywny");
          jQuery(this).hide();
          jQuery("#pasek-plus-menu-hamburger").show();
          return false;
      });
      jQuery("#pasek-plus-menu-hamburger").click(function(){
          jQuery("#pasek-regionalny-plus").removeClass("aktywny");
          jQuery(this).hide();
          jQuery("#pasek-plus-menu").show();
          return false;
      });
      
      var Piano = {
          otworzOkno: function() {
              jQuery(document.body).animate({scrollTop: 0},800).css('margin-top', '0');
              jQuery('#pasek-regionalny-plus').css('position', 'relative');
              jQuery('#pasek-plus').css('z-index', '1');
              Piano.zmianaAtrybutuHref();
          },
          zmianaAtrybutuHref: function() {
              var metodaZamknij = jQuery('#pnmdMobileCloseBtn a').attr('href');
              jQuery('#pnmdMobileCloseBtn a').attr('href', metodaZamknij + '; Piano.zamknijOkno();');
          },
          zamknijOkno: function() {
              jQuery('#pasek-regionalny-plus').css('position', 'fixed');
              jQuery(document.body).css('margin-top', '48px');
              jQuery('#pasek-plus').css('z-index', '10');
          }
      };
  </script>
  

