							LazyLoad.js(['http://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js'],function(){
							var _url=location.protocol + '//' + location.host + location.pathname;
							$.ajax({
							type: 'GET',
							url: 'https://api.facebook.com/method/fql.query?query=select%20total_count,like_count,comment_count,share_count,click_count%20from%20link_stat%20where%20url=%20"'+_url+'"',
							dataType: "xml",
							success: displayXml
							});
							function displayXml(data){
							var share_count = $(data).find("total_count").text();
							$($('.fb_social .p-button__social-text')[0]).parent().append("<span class='count_fb' style='display:none;'><strong>"+share_count+"</strong></span>");
							}
							$.ajax({
							type: "GET",
							dataType: "jsonp",
							url: "https://cdn.api.twitter.com/1/urls/count.json?url="+_url,
							success: function( response ) {
							displayT( response );
							}
							});
							function displayT( response ){
							var json = response;
							if( !json.hasOwnProperty('count') )
							return;
							var count = json.count;
							$($('.p-button__social-text')[1]).parent().append("<span class='tweet_count'><strong>"+count+"</strong></span>");
							}
							$(".fb_social").mouseenter(function(){
							$(".fb_social .p-button__social-text").hide();
