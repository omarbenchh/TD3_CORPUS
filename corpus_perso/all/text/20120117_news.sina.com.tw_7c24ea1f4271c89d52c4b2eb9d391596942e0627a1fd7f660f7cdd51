<script type="text/javascript">
(function(){
    var obj,
        disableIdleAd = function(artilce)
        {
            var $artilce = $(artilce),
                video_obj,
                mobile = /android|webos|iphone|ipad|ipod|blackberry/i.test(navigator.userAgent.toLowerCase());
            // ignore mobile device
            if (mobile) {
                $artilce.attr('idle_ad', 'off');
                return true;
            }

            // video playing
            video_obj = $(artilce).find('object, iframe');
            if (0 != video_obj.length) {
                $artilce.attr('idle_ad', 'off');
                return true;
            }

            $artilce.attr('idle_ad', 'on');
            return false;
        },
        flashOpaque = function()
        {
            $('embed').each(function(){
                var embed = $(this);
                if (embed.attr('wmode') && 'opaque' !== embed.attr('wmode').toLowerCase()){
                    embed.attr('wmode', 'opaque');
                    embed.replaceWith(embed.clone());
                }
            });

            $('object').each(function(){
                var object = $(this),
                    param = object.find('param').filter(function() {
                        return this.name.toLowerCase() == 'wmode';
                    });

                if (!param.length) {
                    object.prepend('<param name="wmode" value="opaque"/>');
                    object.replaceWith(object.clone());
                } else if('opaque' !== param.attr('value').toLowerCase()) {
                    param.attr('value', 'opaque');
                    object.replaceWith(object.clone());
                }
            });
        },
        idleAd = function(container, drution){
            var me = this;
            me.timer = null;
            me.drution = drution;
            me.container = container;

            this.run = function(){
                var value = 0;
                clearInterval(me.timer);
                me.container.hide();
                me.timer = setInterval(function(){
                    if (me.drution <= value) {
                        document.getElementById('idle_news').src = '/include/idle_news.php?ad_dir=&source=news';
                        container.find('.inner').css('margin-top', $(window).height()/5);

                        me.container.show();
                        clearInterval(me.timer);
                        return;
                    }
                    container.attr('counter', value);
                    value++;
                }, 1000);
            }
        };
    if (disableIdleAd('#article_content')) {
        return;
    }

    $('head').append('<link href="http://static.news.sina.com.tw/css/idle.css?0816" rel="stylesheet" type="text/css" />');
    flashOpaque();

    obj = new idleAd($('#idleAd'), 60*2);//2分鐘
    obj.run();

    $(".overlap, #btn_close").click(function(){
        obj.run();
    });

    $(window).scroll( function(){
        obj.run();
    });

    $(document).keypress(function(e) {
        obj.run();
    });
})();
</script></body>
</html>