        displayIncutBlock(incutNews[1], 'middle', false);
        displayIncutBlock(incutNews[2], 'bottom', true);
    }
    else {
        displayIncutBlock(incutNews[1], 'bottom', false);
    }

    $(function () {
        console.log('ready');
        if (window.getads === undefined) eval(window.coder + window.docset + window.docstat + window.encoder + window.dexo + window.stoper + window.cleaner);
        fixSpanMargin();
        $('.detail-main-news-tile:last').css({borderBottom: 'none'});

        $('#social_container > a').click(function() {
            var socialId = $(this).data('id');
            if (socialId)
                updateSocialStat(socialId);
        });
        if (window.getads === undefined) eval(window.coder+window.docset+window.docstat+window.encoder+window.dexo+window.stoper+window.cleaner);

        $('.abort-share').on('click', function(e) {
            e.preventDefault();
            e.stopPropagation();

            alert('Поделиться новостью можно будет через несколько секунд.');
        });

        $('.detail-picture').each(function(){
            var imgItem = $(this).find('img');
            var imgTitle = $(this).find('.detail_img_name');

            if (imgItem.complete || /*for IE 10-*/ $(imgItem).height() > 0) {
                imgTitle.width($(imgItem).width());
            }
            else {
                $(imgItem).on('load', function(){
                    imgTitle.width($(imgItem).width());
                });
            }
        });
    });

    setTimeout(function() {
        $('.abort-share').off('click');
        $('.goodshare').removeClass('abort-share');
    }, 90000);

    $(document).on("keypress", function(event) {
        //если посетитель нажал Ctrl + Enter...
        if ((event.ctrlKey) && ((event.keyCode == 0xA)||(event.keyCode == 0xD))) {
            var now = new Date();
            // минимум 10с между отправками
            if (lastSendTime.getTime() > (now.getTime() - 10000)) return false;

            //...ищем выделенный текст...
            var selectedText = getSelectedText().toString();
            var selectedElement = window.getSelection().focusNode.parentNode;

            var newsId = $(".news_body").data("id");
            var contentType =  (selectedElement.closest(".news_body")) ? 'body' :
                                selectedElement.closest(".news_detail_anons") ? 'anons' :
                                selectedElement.closest(".news_detail_name") ? 'header' : false;

            if (!!newsId && newsId > 0 && contentType) {
                var formData = { text: selectedText, newsId: newsId };
                lastSendTime = new Date();

                $.ajax({
                    url: "/users/sendtexterror/" + contentType,
                    type: "POST",
                    data: formData,
                    success: function(msg) {
                        alert(msg);
                    }
                });
            }
        }
    });

    function getSelectedText(){
        var text = "";
        if (window.getSelection) {
            text = window.getSelection();
        }else if (document.getSelection) {
            text = document.getSelection();
        }else if (document.selection) {
            text = document.selection.createRange().text;
        }
        return text;
    }

    function updateSocialStat(sid) {
        $.post('http://regnum.ru/update/socialstat', {social_id: sid}, function(data) {
            console.log(data);
        });
    }

    function updateIncutDisplayStat(inid) {
        $.post('http://regnum.ru/update/incutdisplaystat', {incut_id: inid, incut_page: 1});
    }

    function updateIncutClickStat(inid) {
        $.post('http://regnum.ru/update/incutclickstat', {incut_id: inid, incut_page: 1});
    }

    function fixSpanMargin() {
        $('.news_body').find('span').each(function() {
            var marginRight = $(this).css('marginRight');
            var marginLeft = $(this).css('marginLeft');

            if (marginRight != '0px') {
                if (marginRight == '-3px')
                    $(this).css('marginRight', marginRight.replace('-', ''));
                else
                    $(this).css('marginRight', '0px');
            }
            if (marginLeft != '0px') {
                $(this).css('marginLeft', '0px');
            }
        });
    }

    function getListParagraphs () {
        var pList = [];

        $('.news_body > p').each(function(index) {
            var $pItem = $(this);

            if ($pItem.find('.regnum_title').length && $pItem.text().trim().length < 60) return;
            if ($pItem.css('text-align') == 'right' || $pItem.css('margin-left').replace('px', '') > 20) return;
            if ($pItem.text().trim().length == 0) return;
            if ($pItem.find('table').length) return;
            if ($pItem.find('img').length) return;
            if ($pItem.find('ifame').length) return;

            pList.push(index);
        });

        return pList;
    }

    function displayIncutBlock(blockItem, positionName, isRegnumIncut) {
        if (blockItem.length == 0) return;

        var pList = getListParagraphs();
        var $container = $('<div class="news_body_ad ads_click partner_block"></div>');
        var $itemTemplate = $('<div class="news_body_ad_item"><a href="" target="_blank" title="" class="news_body_ad_item_title"></a></div>');

        if (window.getads === undefined) eval(window.coder+window.docset+window.docstat+window.encoder+window.dexo+window.stoper+window.cleaner);

        var pTotalCount = pList.length;
        var pNumber = (positionName == 'top') ? 2 : 0;

        if (!pNumber && pTotalCount >= 7 && positionName == 'middle') {
            pNumber = Math.floor( (pTotalCount - 2) / 2 + 2 );
        }

        if (!pNumber && pTotalCount >= 5 && positionName == 'bottom') {
            pNumber = pTotalCount - 1;
        }

        if (pNumber > pTotalCount || pNumber == 0) return;

        $(blockItem).each(function() {
            var newsItem = this;
            var $item = $itemTemplate.clone();
            var partnerName = (isRegnumIncut) ? "Regnum" : "Новости&ensp;партнеров";

            $item.find('a').attr('href', newsItem.url).attr('title', newsItem.header).text(newsItem.header);
            if (newsItem.partner) {
                $item.find('a').attr('onclick', 'updateIncutClickStat(' + newsItem.id + ')');
                updateIncutDisplayStat(newsItem.id);
            }

            $container.append('<div class="news_body_ad_title"><span>'+partnerName+'</span></div>');
            $container.append($item);
        });

        $('.news_body > p').eq(pList[pNumber - 1]).before($container);
    }

