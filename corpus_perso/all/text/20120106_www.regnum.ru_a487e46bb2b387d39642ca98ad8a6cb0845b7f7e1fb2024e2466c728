<script type="text/javascript">
    $(function() {

        setTimeout(addStatisticRow, 8000);

    });

    function addStatisticRow() {
        var sfdata = {};
        sfdata.url = window.location.href;
        $.ajax({
            url: '/ajaxstat/setstat',
            type: 'POST',
            data: sfdata,
            success: function(msg) {
                console.log(msg);
            }
        });
    }
</script>

