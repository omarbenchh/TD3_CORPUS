	        else {styleElement.appendChild(document.createTextNode(moveBar));}
        	document.getElementsByTagName("head")[0].appendChild(styleElement);
  
		}	
									
        function resizeTitleBar() {
        	var tbHeight = document.getElementById('mainContent_ThirdCol_ctr').offsetHeight;
	    	document.getElementById('navColumn_area').style.marginTop = '-' + tbHeight + 'px';
        }

		/* calls function here and then one more time in sponsored disclaimer just in case */
        addTitleBarCSS();
		
