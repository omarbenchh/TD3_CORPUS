        function addTitleBarCSS() {
		/* grabs height of third col area and negative margins nav to compensate. Drops in a stylesheet into the head */
		var tbHeight = document.getElementById('mainContent_ThirdCol_ctr').offsetHeight;
		var moveBar = '#navColumn_area {margin-top: -' + tbHeight + 'px;}';
	
