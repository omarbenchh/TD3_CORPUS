<script type="text/javascript">
function comshow(num){
$("#comment-section .cp").css("display", "none");
$("#comment-section ." + num).css("display", "block");
$("#com-tab a").removeClass("active");
$("#com-tab a#" + num).addClass("active");	}
$(document).ready(function() {
$("a#cl").click(function () {
comshow("cl");
});
$("a#ep").click(function () {
comshow("ep");
});
$("a#pc").click(function () {
comshow("pc");
});
$("a#pcl").click(function () {
comshow("pc");
});
$("a#cll").click(function () {
comshow("cl");
});
});
function comall(num){
$("#comment-section ." + num).addClass("cl");
$("#comment-section ." + num).css("display", "block");	$("#showbutton").css("display", "none");
$("#showbutton").removeClass("cl");	}
</script>
