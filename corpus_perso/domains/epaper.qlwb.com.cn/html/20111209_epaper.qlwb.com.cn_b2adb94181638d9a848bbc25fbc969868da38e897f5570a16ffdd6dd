//加空行
function AddEmptyLine()
{
  var contenttextItem =  document.getElementById("contenttext"); 
  var br = /<BR>/ig
  var htmlContent = contenttextItem.innerHTML.replace(br,"<BR>");
  contenttextItem.innerHTML = htmlContent;
}
