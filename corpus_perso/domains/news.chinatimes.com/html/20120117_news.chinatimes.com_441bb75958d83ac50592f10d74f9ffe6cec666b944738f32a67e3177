function IdxupT(sid, startDate) {
    var endDate = new Date();
    var spantime = (endDate - startDate) / 1000;
    var spanWord = "";
    if (spantime > 86400) spanWord = Math.floor(spantime / 86400) + "天";
    else if (spantime > 3600) spanWord = Math.floor(spantime / 3600) + "小時";
    else if (spantime > 60) spanWord = Math.floor(spantime / 60) + "分鐘";
    else spanWord = Math.ceil(spantime / 86400) + "秒";
    spanWord = "更新：" + spanWord + "前";
    $('#'+sid).html(spanWord);
}
function IdxupTVote(sid, startDate) {
   
    spanWord = "截至" + startDate + "";
    $('#'+sid).html(spanWord);
}

	

</script>

