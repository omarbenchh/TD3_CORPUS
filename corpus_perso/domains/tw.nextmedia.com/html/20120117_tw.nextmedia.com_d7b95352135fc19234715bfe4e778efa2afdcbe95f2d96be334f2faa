          $(document).ready(function() {
            $("#new_morenews .more_text:last").addClass('extend');
            $("#new_morenews .more_text .s2").each(function() { 
              var item = $(this);
              var s1W = item.prev('.s1').width();
              var newTI = s1W+15;
              if (newTI>(item.width()-10)) {
                newTI = 0;
                item.prepend('<br>');
              };
              item.css('text-indent', newTI).dotdotdot({
                ellipsis: '... ',
                height  : item.height()
              });
            });
