    nxmTrack.nxmAddSeg("CID="); 
    nxmTrack.nxmAddSeg("CAT=LOCALNEWS"); 
    nxmTrack.nxmAddSeg("NEWS=DAILY"); 
    nxmTrack.nxmAddSeg("PLATFORM=WEB"); 
    nxmTrack.nxmAddSeg("EDM=MOST");
    nxmTrack.nxmAddSeg("VERSION=");
