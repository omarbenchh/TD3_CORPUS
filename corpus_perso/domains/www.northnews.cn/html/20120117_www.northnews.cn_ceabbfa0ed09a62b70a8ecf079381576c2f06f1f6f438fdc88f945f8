<script>
//合作方实现newsRender接口
function newsRender(data){
	var html = '';	
	
	html = getTpl('360新闻热搜词',data);
	
	document.getElementById('outer').innerHTML = html;
}
function getTpl(title, data){
	var html = '',_item = null;
	
		html += '<h4>'+ title +'</h4>';
		html += '<ul>';
		for(var j=0,l=data.length;j<l;j++){
			_item = data[j];
			html+='<li><a href='+ decodeURIComponent(_item['url']) +' target="_blank">'+ _item['title'] +'</a></li>';
		}
		html += '</ul>';
	
	return html;
}
</script>
