<script>

$(function (){  
	var now = new Date();
	var mstart = new Date(2016, 0, 16);
	var oneDay = 1000 * 60 * 60 * 24;
	var mdiff = mstart - now + oneDay;
	var mday = Math.floor(mdiff / oneDay);
	$(".datatime span").html(mday);
});

</script>
