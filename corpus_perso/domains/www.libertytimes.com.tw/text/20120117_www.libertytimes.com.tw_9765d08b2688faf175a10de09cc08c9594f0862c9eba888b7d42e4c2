<script>
T = $(".ad_w300 .NC1");
if (T.length>0){
  $.each(T,function(){
    ADRand = ADRandCeil(1,$("a",this).length)-1;
    $("a:eq("+ADRand+")",this).show();
	var adno = $("a:eq("+ADRand+")",this).attr("href");
	var adnoArray = new Array();
	adnoArray = adno.split("=");
	var adpv = $( '<scr'+'ipt src="http://iservice.ltn.com.tw/IService2/ad2.php?ano='+adnoArray[1]+'" async></scr'+'ipt>');
	adpv.appendTo(this);
    $("a",this).each(function(){
      $(this).attr('href',$(this).attr('href')+'&source='+document.URL);
    });
  });
}
function ADRandCeil(min,max) {
  return Math.ceil(Math.random()*(max-min+1)+min-1);
}
</script>
