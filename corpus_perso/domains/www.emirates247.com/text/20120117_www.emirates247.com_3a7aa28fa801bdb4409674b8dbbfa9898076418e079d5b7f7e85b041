		$(document).ready(
			function() {
				$("#menu_18550629 UL.menu LI").hover(
					function() { //Hover over event on list item
						$(this).siblings().removeClass('active');
						$(this).siblings().find("UL").hide(); //Hide the subnav
						$(this).addClass('active');
						$(this).find("UL").show(); //Show the subnav
					},
					function() { //on hover out...
						$(this).removeClass('active');
						$(this).find("UL").hide(); //Hide the subnav
						$(this).siblings('.selected').addClass('active');
						$(this).siblings('.selected').find("UL").show(); //Show the subnav
					}
				);
			}
		);
