<script type="text/javascript">
var s;
$(document).keypress( function(e) { 
    if( ( e.keyCode == '13' && e.ctrlKey == true ) || e.which == '10' ){ 
//$().live('keydown', function(e) { 
//    if (e.ctrlKey && e.keyCode === 13){
	s = copySelection();
	if( s == '' ) return;
	$("#sel").html(s);
	$( "#dialog" ).dialog( "open" );
	obj = document.getElementById("dialog");
	obj.style.visibility = "visible";

    }
});
 $(function() {
     $( "#dialog" ).dialog({
	 autoOpen: false,
	 hide: "blind",
	 minWidth: 340,

	 buttons: {
	     "Отправить": function() {
		 $.ajax({
		     dataType: 'json',
		     type: "post",
		     url: "http://www.amic.ru/publib/commenterror.php",
		     data: {comment : '"'+document.getElementById('comm').value+'"', select : '"'+s+'"', url: '"'+document.URL+'"'}
		 });
		 $( this ).dialog( "close" );
	     },
	     "Отменить": function() {
		 $( this ).dialog( "close" );
	     }
	 }

     } );
 });


function copySelection(){
   if      (window.getSelection)   selected = window.getSelection().toString();
   else if (document.getSelection) selected = document.getSelection();
   else if (document.selection)   selected = document.selection.createRange().text;
   return selected;
}
</script>


