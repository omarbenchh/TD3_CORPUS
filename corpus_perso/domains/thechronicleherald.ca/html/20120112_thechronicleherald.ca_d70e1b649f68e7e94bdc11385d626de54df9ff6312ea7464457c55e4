    }

    function latest_video_pagerCallback(page_index, jq){
      var items_per_page = latest_video_pagination_options.items_per_page;
      var offset = page_index * items_per_page;
      var new_latest_video = $('#latest_video_hidden div.row').slice(offset, offset + items_per_page).clone();
      $('#latest_video_show').empty().append(new_latest_video);
      return false;
    }

    function latest_video_initPagination() {
      var num_entries = $('#latest_video_hidden div.row').length;
      // Create pagination element
      $("#latest_video_pager").pagination(num_entries, latest_video_pagination_options);
    }

