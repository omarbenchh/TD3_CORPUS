    /** START adtech **/
            
    function referNormalizer(refer)
        {
            refer = refer.replace(/http(s)*:\/\/(www\.)*/g,"");
            refer = refer.replace(/\/.*/g,"");
            
            if(refer == "t.co" || refer == "thech.ca")
            {
              return "twitter";
            }
            else if(refer.indexOf(".com") > -1 || refer.indexOf(".ca") > -1)
            {
              refer = refer.substring(0,refer.lastIndexOf("."));
              if(refer.indexOf(".") > -1)
              {
                refer = refer.substring(refer.indexOf(".")+1,refer.length);
              }
            }
            else if(refer.indexOf(".ly") > -1)
            {
              refer = refer.replace(".","");
            }
            return refer;
        }
    var adtech_alias_pre = 'main_opinion-news-columns_article';
    // JH - this var is used in the video player js to link ads when called from video play        
    var adtech_grp = '211595031';        
    jsRefer = referNormalizer(document.referrer);
    var keywords = 'opinion+health-reform+news-columns+marilla-stephenson';
    aliases = 'main_opinion-news-columns_article_top_728x90,main_opinion-news-columns_article_bottom_728x90,main_opinion-news-columns_article_top_300x250,main_opinion-news-columns_article_middle1_300x250,main_opinion-news-columns_article_middle2_300x250,main_opinion-news-columns_article_top_special,main_opinion-news-columns_article_top_skin,main_opinion-news-columns_article_top_300x150,main_opinion-news-columns_article_top_300x600,main_opinion-news-columns_article_top_headboard';
    ADTECH.config.website = { 
      server: 'adserver.adtechus.com', 
      network: '5456.1' 
    };
    ADTECH.config.page = {
      kv: { sub:"0", ref:jsRefer, abbr:window.adtechCCvals },
      params: { grp:"211595031", target:'_blank', misc: new Date().getTime() }
    };
    /** END adtech **/
//--><!]]>
