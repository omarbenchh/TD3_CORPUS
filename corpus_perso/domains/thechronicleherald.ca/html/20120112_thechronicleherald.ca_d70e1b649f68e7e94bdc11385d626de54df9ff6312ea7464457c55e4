<script>
  $(document).ready(function() {
    $('#adtech-dac-ad-top_728x90').attr("id",adtech_alias_pre  + '_top_728x90');
    keys = jQuery.grep(["firstadcall", keywords], Boolean).join("+");
    ADTECH.config.placements[adtech_alias_pre + '_top_728x90'] = {
      params: { key: keys }
    };
    ADTECH.loadAd(adtech_alias_pre + '_top_728x90');
    /* This is kind of dirty, but I can't seem to pass a boolean value to JS from PHP */
    if("false" === "true") {
      /* Refresh Ads */
      setInterval(function() { 
        ADTECH.config.placements[adtech_alias_pre + '_top_728x90'] = {
          params: { key: keywords }
        };
        ADTECH.loadAd(adtech_alias_pre + '_top_728x90');  
      },1000 * 0);  
    }
  }); 
</script>          </div><!-- /#leaderboard -->
          
          
          
      </div><!-- /#logo-area -->

