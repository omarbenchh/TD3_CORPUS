    $('#adtech-dac-ad-top_skin').attr("id",adtech_alias_pre  + '_top_skin');
    keys = jQuery.grep(["firstadcall", keywords], Boolean).join("+");
    ADTECH.config.placements[adtech_alias_pre + '_top_skin'] = {
      params: { key: keys }
    };
    ADTECH.loadAd(adtech_alias_pre + '_top_skin');
    /* This is kind of dirty, but I can't seem to pass a boolean value to JS from PHP */
    if("false" === "true") {
      /* Refresh Ads */
      setInterval(function() { 
        ADTECH.config.placements[adtech_alias_pre + '_top_skin'] = {
          params: { key: keywords }
        };
        ADTECH.loadAd(adtech_alias_pre + '_top_skin');  
      },1000 * 0);  
    }
  }); 
</script>
