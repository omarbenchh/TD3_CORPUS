<script>
  $(document).ready(function() {
    $('#adtech-dac-ad-middle2_300x250').attr("id",adtech_alias_pre  + '_middle2_300x250');
    keys = jQuery.grep(["firstadcall", keywords], Boolean).join("+");
    ADTECH.config.placements[adtech_alias_pre + '_middle2_300x250'] = {
      params: { key: keys }
    };
    ADTECH.loadAd(adtech_alias_pre + '_middle2_300x250');
    /* This is kind of dirty, but I can't seem to pass a boolean value to JS from PHP */
    if("false" === "true") {
      /* Refresh Ads */
      setInterval(function() { 
        ADTECH.config.placements[adtech_alias_pre + '_middle2_300x250'] = {
          params: { key: keywords }
        };
        ADTECH.loadAd(adtech_alias_pre + '_middle2_300x250');  
      },1000 * 0);  
    }
  }); 
