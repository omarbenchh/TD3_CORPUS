    $(document).ready(function() {
      if (($('#taboola-below-main-column-mix'))||($('#taboola-right-rail-mix'))) {
        if ($('body').hasClass('page-videos')) {
          doTaboola('video');
          $('.jspPane').children().click(function() {
            var clss = $(this).attr('class');
            clss = clss.split(' ');
            clss = clss[1].replace('video_','');
            _taboola.push({notify: 'videoPlay', url: '/videos/news/'+clss});
          });
        }else {
          doTaboola('article');
        }
      }
    });    

