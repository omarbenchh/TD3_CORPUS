		<script type="text/javascript">
			var bb_object = {};
			var show_save_icons = false;

			
			hb 		= "";
			hbmatch = "";
			hb 		=  $.cookie('HasBeen'); //Current value of cookie
			hbArray = new Array();
			scw 	= screen.width;
			sch 	= screen.height;
			usloc 	= false;
			wloc 	= "none";
			wlow 	= "none";
			whigh 	= "none";
			wicon 	= "none";
			cid 	= "204";
			mediaServer = "http://media.nzherald.co.nz/nzhgfx/themes/0.5/";

			//Profile data
			ug		= $.cookie('ug');
			ua 		= $.cookie('ua');
			ul 		= $.cookie('ul');
			//Additional profile info for auto-populating forms
			fn 		= $.cookie('fn') || "";
			ln 		= $.cookie('ln') || "";
			cu 		= $.cookie('cu') || "";
			g 		= $.cookie('ug') || "";
			dob 	= $.cookie('dob') || "";
			pn 		= $.cookie('pn') || "";
			e 		= $.cookie('e') || "";
			//Address data
			ast 	= $.cookie('ast') || "";
			asb 	= $.cookie('asb') || "";
			act 	= $.cookie('act') || "";
			aar 	= $.cookie('aar') || "";
			apc 	= $.cookie('apc') || "";
			aco 	= $.cookie('aco') || "New Zealand";

			//Get Help PTA
			pta 	= $.cookie('pta') || "";

			// Get Help url
			var gethelpURL = '//nzherald.custhelp.com';

			if (g != "") {
				if (g == 'f') g = "Female";
				else if (g == 'm') g = "Male";
			}

			//strip empty space and special characters out for the ad servers
			if (ul != null && ul != "") ul = ul.replace(/[^a-zA-Z]/g, "_");

			time 		= "NONE"; // Variable for video time
			value 		= "NONE"; //Variable for video value
			play 		= "NONE"; // Variable for click to play or auto play
			subarea 	= "";

			// Weather Location
			if ($.cookie('nzh_weatherlocation') == null || $.cookie('nzh_weatherlocation') == -1)
				locationid 	= 12; /* Default to Auckland*/
			else
				locationid 	= $.cookie('nzh_weatherlocation');

			if((typeof nzhdata !== 'undefined') && (typeof nzhdata.json.weather["_" + locationid] !== 'undefined'))
				region 			= nzhdata.json.weather["_" + locationid].name;
			else
				region = 'Auckland';

			// Work out if it was user selected
			if ($.cookie('nzh_userselectedlocation') != null){
				usloc 		= $.cookie('nzh_userselectedlocation');
			}

			
			subarea = "/S1=WORLD/S2=NONE/S3=NONE/S4=NONE/S5=NONE";
				



				hbArray.length 						= 5;
				if(hb == null) {
					hb 								= "HEALTH" + "._._._._";
					$.cookie('HasBeen', hb, {path:'/', expires:30, domain:BaseDomain});
				} else {
					hbmatch 					= hb.match("_");
					if(hbmatch == "_") {
						//replace the '_' with the new value
						hbvalue 				= "";
						hbvalue 					= "HEALTH";
						hb 							= hb.replace("_",hbvalue);
						$.cookie('HasBeen', hb, {path:'/', expires:30, domain:BaseDomain});
					} else {
						hbArray 				= hb.split(".");  /* No match - all values filled, split at period */
						if(hbArray.length == 5) {
							hbArray.shift(); /* Move out the first array element */
							hbArray[4] 				= "HEALTH"; /* Set the last array element */
							hbnew 				= "";
							for(i=0;i<hbArray.length; i++) {
								if(hbnew == "")	{
									hbnew 			= hbArray[i];
								} else {
									hbnew 			= hbnew + "." + hbArray[i];
								}
							}
							hb 						= hbnew;
							hbnew 					= "";
							//hb = hbArray[0]+ "." + hbArray[1] + "."+ hbArray[2] + "." + hbArray[3] + "." + hbArray[4];
							$.cookie('HasBeen', hb, {path:'/', expires:30, domain:BaseDomain});
						}
					}
				}

			if (typeof nzhdata !== 'undefined') {

                // Make weather values available regardless of user selected variable (usloc) - commented out.
                //if(usloc) {
                    data 						= nzhdata.json.weather["_" + locationid];
                    if (data != undefined) { // Generally because we have a cooke but its value is dud.

                            // Set wloc only when users select location.
                            if(usloc){
                                if($.cookie('nzh_weatherlocation') != null) wloc = data.name.toLowerCase().replace(' ','');	// Only set wloc if cookie is set
                            }

                            // Weather class, high and low to be passed to the ad call through siteTarget variable
                            whigh, wlow, wicon;
                            if (data.forecasts[0] != undefined) { // Make sure we have forecast data.
                                    whigh 					= data.forecasts[0].high;
                                    wlow 					= data.forecasts[0].low;
                                    wicon 					= data.forecasts[0].cssclass;
                            }
                    }
            //}

				if (nzhdata.billboard != undefined) {
					
									bb_object = nzhdata.billboard.getBillboard('c_id',204,1,'STY');
								
				}

				if (nzhdata.config != undefined) {
					show_save_icons = nzhdata.config.svl.showSaveIcons();
				}

			}


			profileString = "";
			if (ug != null && ug != "") {
				profileString = profileString + "/UG=" + ug;
			}
			if (ua != null && ua != "") {
				profileString = profileString + "/UA=" + ua;
			}
			if (ul != null && ul != "") {
				profileString = profileString + "/UL=" + ul;
			}

			

			
			//console.log('Area: SEC.HEALTH.STY');
			//console.log('CHA: NATIONAL');
			//console.log('SS: HEALTH');
			siteTarget 	= "/SITE=NZH/NW=NZMEP/AREA=SEC.HEALTH.STY/CHA=NATIONAL/SS=HEALTH" + subarea + "/HB=" + hb + "/SCW=" + scw + "/SCH=" + sch + "/WLOC=" + wloc +  "/WH=" + whigh + "/WL=" + wlow + "/WC=" + wicon + "/VT=" + time + "/VV=" + value + "/VP=" + play + profileString;

