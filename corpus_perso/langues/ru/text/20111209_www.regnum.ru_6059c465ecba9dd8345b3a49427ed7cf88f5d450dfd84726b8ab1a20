<script type="text/javascript">
    var isUserLogin = false;
    var lastSendTime = new Date();

        var incutNews = [[{"id":"9","header":"Когда ждать ядерной войны: Первыми, разумеется, ударят...","url":"http://news.rambler.ru/articles/32355306/","partner":true},{"id":"1414","header":"На Украине паника: Запад услышал Москву","url":"http://news.rambler.ru/32365726/","partner":true},{"id":"1","header":"Россия обнаружила в Крыму то, что проворонила Украина","url":"http://news.rambler.ru/world/32230917/","partner":true}],[{"id":"5","header":"События в Мариуполе изменят карту Украины","url":"http://news.rambler.ru/articles/32089625/","partner":true},{"id":"13","header":"Как Турция отомстит России","url":"http://news.rambler.ru/world/32392472/","partner":true},{"id":"15","header":"Россия открыла ответный огонь из Ту-22М3","url":"http://news.rambler.ru/politics/31952248/","partner":true}],[{"id":"2055944","header":"США оставили часть своих санкций против Ирана в силе","url":"http://regnum.ru/news/polit/2055944.html","partner":""},{"id":"2055976","header":"Бідність: путь Украины с «майдана» на задворки истории","url":"http://regnum.ru/news/polit/2055976.html","partner":""},{"id":"2055978","header":"Саудовский фондовый рынок обвалился","url":"http://regnum.ru/news/economy/2055978.html","partner":""}]];
    var pList = getListParagraphs();

    displayIncutBlock(incutNews[0], 'top');
    
