		// модальная форма для отправки вопроса
		function get_modal_form_question(){
			var text = $('#question_komm_bottom').val();
			var log_form_id = $('#addq__wrapp input[name="hidden_type_form"]').val();
			if(text.length > 0){
				$('body').prepend('<div id="universalBackForm"><div id="universalBackFormPreloader"></div></div>');
				$('#universalBackForm').fadeIn(100);
				$.ajax({
					type: 'POST',
					url: "/ajax_server/questions/get_form_question.php",
					cache: false,
					data: {'type_form' : 'red_form', 'text' : text, 'log_form_id' : log_form_id },
					success: function(data){
						$('#universalBackForm').fadeIn(100);
						$('#universalBackForm').html( data );
					}
				});
			}else{
				alert('Не введён текст вопроса.');
			}
		}
