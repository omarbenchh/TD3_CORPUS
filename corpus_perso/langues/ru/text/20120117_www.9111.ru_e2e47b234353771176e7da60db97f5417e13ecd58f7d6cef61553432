	function show_tab(tab){
		if (tab == 'pi_comments_list'){
			$('#pi_ask_question').hide();
			$('#pi_ask_tab').removeClass('pi__active-tab');
			$('#pi_comments_list').show();
			$('#pi_comments_tab').addClass('pi__active-tab');
		} else {
			$('#pi_comments_list').hide();
			$('#pi_comments_tab').removeClass('pi__active-tab');
			$('#pi_ask_question').show();
			$('#pi_ask_tab').addClass('pi__active-tab');
		}
		return false;
	}

