<script>
    static_loader.loadBlock(
            'mainmenu',
            'pageblock_mainmenu',
            function (target) {
                $('#' + target).find("ul>li").each(function() {
                    if ($(this).attr("data-section") == window.section) {
                        $(this).addClass("red_border_top");
                        return false;
                    }
                });
                $(".main-menu li").menuSlider();
            }
    );
</script>

