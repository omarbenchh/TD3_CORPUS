            $(function () {
                var position = parseInt($('.blogers .current-page').html());
                var pages = parseInt($('.blogers .total-pages').html());

                $('.blogers .to-previous').click(function () {
                    if (position <= 1) {
                        return false;
                    } else {
                        position = position - 1;
                    }
                    $('.blogers').css('opacity', .5);
                    $('.blogers .current-page').html(position);
                    $.post(
                            location.href,
                            {page: position},
                            function (data) {
                                $('.blogers').replaceWith(data).css('opacity', 1);
                            });
                    return false;
                });

                $('.blogers .to-next').click(function () {
                    if (position >= pages) {
                        return false;
                    } else {
                        position = position + 1;
                    }
                    $('.blogers').css('opacity', .5);
                    $('.blogers .current-page').html(position);
                    $.post(
                            location.href,
                            {page: position},
                            function (data) {
                                $('.blogers').replaceWith(data).css('opacity', 1);
                            });
                    return false;
                });

            });
        </script>
