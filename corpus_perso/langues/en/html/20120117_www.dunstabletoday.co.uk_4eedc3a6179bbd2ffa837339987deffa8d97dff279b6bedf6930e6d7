			var isResponsiveSite = false;
		
	var pushTaboolaObject = function(){
		var taboolaObject = {
			mode: "alternating-thumbnails-d",
			placement: "Mobile Below Article Thumbnails",
			target_type: "mix"
		};
				
					taboolaObject.container = "taboola-mobile-below-article-thumbnails";
				_taboola.push(taboolaObject);
	}
	if (isResponsiveSite){
		pushTaboolaObject();
		var taboolaContainer = $("#" + 'taboola-mobile-below-article-thumbnails' + "-title");
					taboolaContainer.append("");
			} else {
		if ("mobile" === Taboola().getPlatform()){
			pushTaboolaObject();
		}
	}
</script>

      
  
