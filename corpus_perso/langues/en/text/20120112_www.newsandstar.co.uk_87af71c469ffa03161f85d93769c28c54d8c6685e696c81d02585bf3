<script language="javascript">
function findit()
{
	var searchTerm = document.getElementById("searchText");
	if (searchTerm.value != null && searchTerm.value != "e.g. plumbers")
	{
		var townName = "carlisle";
		var pcode = "CA1";
		var matchedid = 34;
var subdomain = "newsandstar";
		if ((window.location.href.indexOf("newsandstar") != -1) || (window.location.href.indexOf("Cumberland") != -1))
		{
			townName = "carlisle";
			pcode = "CA1";
			matchedid = 34;
		}
		if (window.location.href.indexOf("cumberland") != -1)
{
subdomain = "cumberlandnews";
}
		if (window.location.href.indexOf("timesandstar") != -1)
		{
			townName = "workington";
			pcode = "CA14";
			matchedid = 141;	
                       subdomain="timesandstar";
		}
		if (window.location.href.indexOf("nwemail") != -1)
		{
			townName = "barrow";
			pcode = "LA14";
			matchedid = 14;	
                        subdomain = "nwemail";
		}
		if (window.location.href.indexOf("whitehaven") != -1)
		{
			townName = "whitehaven";
			pcode = "CA28";
			matchedid = 138;	
                        subdomain = "whitehavennews";
		}


		newloc = "?type=" + encodeURI(searchTerm.value) + "&name=&town=" + townName + "&location=" + pcode + "&dist=30&sort=0&siteID=0&matchedTown=" + matchedid;
		window.location = "http://" + subdomain + ".clickin2findit.co.uk/search.aspx"+newloc;
		return true;
	}
}

function handleKeyPress(e){
var key=e.keyCode || e.which;
if (key==13){
findit();
}
}

function searchBoxClicked()
{
	var searchTerm = document.getElementById("searchText");
	searchTerm.style.color="black";
	if (searchTerm.value == "e.g. plumbers")
		searchTerm.value = "";
}
</script>
<a href="http://" + subdomain + ".clickin2findit.co.uk/">
<img src="http://www.cnnewmedia.co.uk/locker/clickin2promo/findit-btn2_larger.gif" style="border: 0px;"></a>
Search for:
<input type="text" name="searchText" id="searchText" size=10 style="margin-bottom: 5px; color: #cccccc;" value="e.g. plumbers" onfocus="searchBoxClicked()" onkeypress="handleKeyPress(event)"/><br />
<input type="button" onclick="findit()" style="margin-bottom: 5px; color: White; background-color: rgb(133, 117, 191); border-color: rgb(122, 102, 173); font-size: 140%; font-weight: bold; height: 30px; width: 80px;" class="btnSearch" id="btnFinditSearch" value="findit" name="btnFinditSearch">
</div>
		
      
          
        
