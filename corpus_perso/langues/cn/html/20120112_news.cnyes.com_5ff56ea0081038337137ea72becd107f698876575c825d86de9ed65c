         ( urls.toLowerCase().indexOf('news.cnyes.com.cn') == 0  )
         ||
         ( urls.toLowerCase().indexOf('115.28.36.106') == 0  )
        )
    {
          
        tagArray = getHtmlTag('div') ; 
        
        if ( tagArray.length > 0 )
        {
            for ( i = 0 ; i < tagArray.length ; i+= 1 )
            {
                if ( tagArray[i].className == 'newsFunctions2' || tagArray[i].className == 'moodCounter' )
                {
                    tagArray[i].style.display = 'none' ; 
                }

            }
        }
        
    }
    else
    {
//        document.getElementById('heart_0').href = '/heartlist/0.htm' ; 
//        document.getElementById('heart_4').href = '/heartlist/4.htm' ; 
//        document.getElementById('heart_6').href = '/heartlist/6.htm' ; 
//        document.getElementById('heart_7').href = '/heartlist/7.htm' ; 
//        document.getElementById('heart_8').href = '/heartlist/8.htm' ; 
        
    }
    
    function getHtmlTag( tagName)
    {
        return document.getElementsByTagName (tagName) ; 
    }
    </script></div>


