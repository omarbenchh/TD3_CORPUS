                    function createmetat(elmtName) 
                    {
                        elmtName = elmtName ? elmtName : '';
                        var inputElmt ;
                        if ( elmtName == 'label' )
                        {
                            inputElmt = document.createElement('label');
                            inputElmt.innerHTML = 'EMAIL：' ;
                        }
                        else if ( elmtName == 'br' )
                        {
                            inputElmt = document.createElement('br');
                        }
                        else if ( elmtName == 'input' )
                        {
                            inputElmt = document.createElement('input');
                            inputElmt.setAttribute('type', 'text');
                            inputElmt.setAttribute('id', 'txtEMAIL1');
                            inputElmt.setAttribute('name', 'txtEMAIL1');
                            inputElmt.setAttribute('class', 'input1');
                            inputElmt.setAttribute('style', 'width: 180px');
                            
                        }
                        return inputElmt;
