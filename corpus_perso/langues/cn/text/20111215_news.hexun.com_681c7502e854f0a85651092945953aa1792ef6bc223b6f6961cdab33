{
	if(getsid!="" && getsid!="undefined")
	{
	return cookieUrl+getsid;
	}else
	{
	return cookieUrl
	}
}
if(type=="use")
{
	if(getuse!="" && getuse!="undefined")
	{
	return cookieUrl2+getuse;
	}else
	{
		return cookieUrl2;
	}
}
},
postCookieUrl:function()
{
